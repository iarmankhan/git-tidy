    "@octokit/rest": "^21.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ink": "^5.0.1",
    "react": "^18.3.1",
    "simple-git": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.3",
    "tsup": "^8.1.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18"
  }
