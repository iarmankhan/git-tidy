  "version": "1.0.0",
  "description": "Interactive CLI tool for cleaning up unused git branches",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "git-tidy": "./bin/git-tidy.js"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "start": "node dist/index.js",
