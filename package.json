{
  "name": "git-tidy-cli",
  "version": "1.0.0",
  "description": "Interactive CLI tool for cleaning up unused git branches with a beautiful TUI",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "git-tidy": "./bin/git-tidy.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "git",
    "branch",
    "cleanup",
    "cli",
    "tui",
    "github",
    "prune",
    "delete",
    "interactive",
    "terminal"
  ],
  "author": "Arman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArmandBrworworworx/git-tidy.git"
  },
  "bugs": {
    "url": "https://github.com/ArmandBrworworworx/git-tidy/issues"
  },
  "homepage": "https://github.com/ArmandBrworworworx/git-tidy#readme",
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "@octokit/rest": "^21.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ink": "^5.0.1",
    "react": "^18.3.1",
    "simple-git": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.3",
    "tsup": "^8.1.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18"
  }
}
